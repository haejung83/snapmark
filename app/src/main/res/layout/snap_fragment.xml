<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
        name="viewmodel"
        type="com.haejung.snapmark.presentation.snap.SnapViewModel"/>
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/snap"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorAccent"
      tools:context=".presentation.snap.SnapFragment">

    <com.haejung.snapmark.presentation.snap.snapedit.SnapEditView
        android:id="@+id/snapEditView"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button"
        android:id="@+id/buttonOpenGallery"
        android:text="@string/title_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="@{() -> viewmodel.openGalleryForPicking()}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/snapEditView"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button"
        android:id="@+id/saveTargetImage"
        android:text="@string/title_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="@{() -> viewmodel.saveTargetImageWithMark()}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/snapEditView"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>